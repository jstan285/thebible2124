---
layout: layout.njk
---

<h1>{{ group.book | capitalize }} - Chapter {{ group.chapter }} - Line {{ group.id }}</h1>

{# Call the shortcode directly (no set/if needed) #}
{% lineGroupSum group.book, group.chapter, group.id %}

<div class="tile-container tile-container--stack">
  {% set order = ["Source","Rendering","Reflections","Lens"] %}
  {% for label in order %}
    {% set key = label | lower %}
    {% if group.files[key] %}
      {% set url = (group.book | txtUrl(group.chapter, group.files[key].basename)) %}
      <a class="tile" href="{{ url }}">
        <span class="tile-label">Line {{ group.id }}<br>{{ label }}</span>
      </a>
    {% endif %}
  {% endfor %}
</div>

{# Prev / Next across chapters within same book #}
<div class="prev-next" style="display:flex; gap:.75rem; justify-content:space-between; width:100%; max-width:460px; margin:.25rem auto 0;">
  <div>
    {% if group.prevId and group.prevChapter %}
      <a class="back-button" href="/library/{{ group.book }}/{{ group.prevChapter }}/Line_{{ group.prevId }}/" aria-label="Previous line group">
        ← Line {{ group.prevId }}
      </a>
    {% endif %}
  </div>
  <div>
    {% if group.nextId and group.nextChapter %}
      <a class="back-button" href="/library/{{ group.book }}/{{ group.nextChapter }}/Line_{{ group.nextId }}/" aria-label="Next line group">
        Line {{ group.nextId }} →
      </a>
    {% endif %}
  </div>
</div>

<a href="/library/{{ group.book }}/{{ group.chapter }}/" class="back-button">
  ← Back to Chapter {{ group.chapter }}
</a>



